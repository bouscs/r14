{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "r14-h",
    //"types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "$modules/*": ["./comp/modules/*"]
    }
  },
  "include": ["comp", "./vite.config.ts"]
}
